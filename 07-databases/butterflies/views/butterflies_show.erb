<h2><%= @butterfly['name'] %></h2>
<h2><%= @butterfly['family'] %></h2>
<% unless @butterfly['image'].nil? || @butterfly['image'].empty? %>
    <img class="feature" src=<%= @butterfly['image'] %> alt=<%= @butterfly['name'] %>>
<% end %>
<div class="controls">
    <a href="/butterflies/<%= @butterfly['id'] %>/edit">Edit Butterfly</a>
    <a href="/butterflies/<%= @butterfly['id'] %>/delete">Delete Butterfly</a>
</div>
