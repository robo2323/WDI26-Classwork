{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
	"brace-style": [
	    "error",
	    "1tbs"
	],
	"curly": [
	    "error"
	],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
	"no-console": [
	    "off"
	],
	"no-undef": [
	    1
	],
	"no-unused-vars": [
	    1
	]
    }
}
