<form action="/planets" method="post">
    <label for="">Name</label>
    <input type="text" name="planet[name]" placeholder="earth">

    <label for="">Image:</label>
    <input type="url" name="planet[image]">

    <label for="">Orbit:</label>
    <input type="number" name="planet[orbit]" placeholder="(in erath days)">

    <label for="">Mass:</label>
    <input type="number" name="planet[mass]" placeholder="100000">

    <label for="">Diameter:</label>
    <input type="number" name="planet[diameter]" placeholder="200000">

    <label for="">Moons:</label>
    <input type="number" name="planet[moons]" placeholder="4">

    <button>Create Planet</button>

</form>